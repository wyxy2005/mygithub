<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:anna="http://schemas.android.com/apk/res/com.anna.weixin6_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >

        <com.anna.weixin6_0.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            anna:icon="@drawable/ic_menu_start_conversation"
            anna:text="@string/tab_name"
            anna:text_size="12sp"
            anna:color="#ff45c01a" />

        <com.anna.weixin6_0.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            anna:icon="@drawable/ic_menu_friendslist"
            anna:text="@string/tab_contact"
           anna:text_size="12sp"
            anna:color="#ff45c01a" />

        <com.anna.weixin6_0.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            anna:icon="@drawable/ic_menu_emoticons"
            anna:text="@string/tab_found"
            anna:text_size="12sp"
            anna:color="#ff45c01a" />

        <com.anna.weixin6_0.ChangeColorIconWithText
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            anna:icon="@drawable/ic_menu_allfriends"
            anna:text="@string/tab_me"
            anna:text_size="12sp"
            anna:color="#ff45c01a" />
    </LinearLayout>

</LinearLayout>