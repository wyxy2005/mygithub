<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/background_normal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/include_header" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/layout_header">
        <WebView android:scrollbarStyle="insideOverlay" android:id="@id/webview" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" android:layout_below="@id/layout_header" android:fadeScrollbars="true" />
        <FrameLayout android:id="@id/layout_btn" style="@style/Style_BottomBar">
            <Button android:textColor="@color/btn_default_submit" android:id="@id/btn_openmember" android:background="@drawable/btn_default_submit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="开通会员" style="@style/Style_Bottom_Btn" />
        </FrameLayout>
    </LinearLayout>
    <ImageView android:id="@id/layout_shadow" android:background="@drawable/bg_topbar_shadow" android:focusable="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/layout_header" />
</RelativeLayout>
