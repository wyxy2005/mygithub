<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:scrollbarStyle="insideOverlay" android:background="@color/background_normal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/include_header" />
    <LinearLayout android:orientation="vertical" android:background="@color/background_normal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/layout_header">
        <WebView android:scrollbarStyle="insideOverlay" android:id="@id/web" android:background="@color/background_normal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fadeScrollbars="true" />
    </LinearLayout>
    <ImageView android:id="@id/layout_shadow" android:background="@drawable/bg_topbar_shadow" android:focusable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/layout_header" />
</RelativeLayout>
