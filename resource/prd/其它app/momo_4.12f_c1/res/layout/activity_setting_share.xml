<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/background_normal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/include_header" />
    <ScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/profile_layout_bottom" android:layout_below="@id/layout_header" style="@style/Style_Patterns">
        <LinearLayout android:orientation="vertical" android:paddingBottom="25.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <RelativeLayout android:gravity="center_vertical" android:id="@id/setting_layout_share_sinaweibo" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Setting_Item">
                <ImageView android:id="@id/sina_icon" android:src="@drawable/ic_setting_weibo" style="@style/Setting_shareItem_Left_Icon" />
                <com.immomo.momo.android.view.HandyTextView android:text="分享到新浪微博" android:layout_toRightOf="@id/sina_icon" style="@style/Setting_shareItem_Left_Text" />
                <ImageView android:background="@drawable/ic_common_arrow_right" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Item_Right" />
            </RelativeLayout>
            <include layout="@layout/include_patterns_divideline" />
            <RelativeLayout android:id="@id/setting_layout_share_tencentweibo" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Setting_Item">
                <ImageView android:id="@id/tx_weibo_icon" android:src="@drawable/ic_setting_tweibo" style="@style/Setting_shareItem_Left_Icon" />
                <com.immomo.momo.android.view.HandyTextView android:text="分享到腾讯微博" android:layout_toRightOf="@id/tx_weibo_icon" style="@style/Setting_shareItem_Left_Text" />
                <ImageView android:background="@drawable/ic_common_arrow_right" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Item_Right" />
            </RelativeLayout>
            <include layout="@layout/include_patterns_divideline" />
            <RelativeLayout android:id="@id/setting_layout_share_renren" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Setting_Item">
                <ImageView android:id="@id/renren_icon" android:src="@drawable/ic_setting_renren" style="@style/Setting_shareItem_Left_Icon" />
                <com.immomo.momo.android.view.HandyTextView android:text="分享到人人网" android:layout_toRightOf="@id/renren_icon" style="@style/Setting_shareItem_Left_Text" />
                <ImageView android:background="@drawable/ic_common_arrow_right" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Item_Right" />
            </RelativeLayout>
            <include layout="@layout/include_patterns_divideline" />
            <RelativeLayout android:id="@id/setting_layout_share_more" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Setting_Item">
                <ImageView android:id="@id/zhanwei" android:visibility="invisible" android:src="@drawable/ic_setting_renren" style="@style/Setting_shareItem_Left_Icon" />
                <com.immomo.momo.android.view.HandyTextView android:text="更多" android:layout_toRightOf="@id/zhanwei" style="@style/Setting_shareItem_Left_Text" />
                <ImageView android:background="@drawable/ic_common_arrow_right" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Item_Right" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView android:id="@id/layout_shadow" android:background="@drawable/bg_topbar_shadow" android:focusable="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/layout_header" />
</RelativeLayout>
