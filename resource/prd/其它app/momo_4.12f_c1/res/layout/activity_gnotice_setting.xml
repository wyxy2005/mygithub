<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/background_normal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/include_header" />
    <ScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/profile_layout_bottom" android:layout_below="@id/layout_header" style="@style/Style_Patterns">
        <LinearLayout android:orientation="vertical" android:paddingBottom="25.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@id/gnotification_layout_open" style="@style/Style_Patterns_Content_Clickable_Setting">
                <com.immomo.momo.android.view.HandyTextView android:text="开启提醒" android:layout_centerVertical="true" style="@style/Text_List_Title" />
                <RadioButton android:id="@id/gnotification_rb_open" android:clickable="false" style="@style/Item_Right" />
            </RelativeLayout>
            <View style="@style/Line_Vertical" />
            <RelativeLayout android:id="@id/gnotification_layout_mute" style="@style/Style_Patterns_Content_Clickable_Setting">
                <com.immomo.momo.android.view.HandyTextView android:text="无声模式" android:layout_centerVertical="true" style="@style/Text_List_Title" />
                <RadioButton android:id="@id/gnotification_rb_mute" android:clickable="false" style="@style/Item_Right" />
            </RelativeLayout>
            <View style="@style/Line_Vertical" />
            <RelativeLayout android:id="@id/gnotification_layout_close" style="@style/Style_Patterns_Content_Clickable_Setting">
                <com.immomo.momo.android.view.HandyTextView android:text="关闭提醒" android:layout_centerVertical="true" style="@style/Text_List_Title" />
                <RadioButton android:id="@id/gnotification_rb_close" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Item_Right" />
            </RelativeLayout>
            <View style="@style/Line_Vertical" />
        </LinearLayout>
    </ScrollView>
    <ImageView android:id="@id/layout_shadow" android:background="@drawable/bg_topbar_shadow" android:focusable="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/layout_header" />
</RelativeLayout>
